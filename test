            dulceria.F_preguntar_m√°s_snack();
            this.BOLETA_FINAL();
        }
    }
    public void comentradas() {
        System.out.println("Muy bien para continuar con su compra indique");
        System.out.println("¬øCuantos adultos son?");
        int canadultos = sc.nextInt();
        System.out.println("¬øCuantos ni√±os son?");
        int canni√±os = sc.nextInt();
        int topeadul, topeni√±;
        cant_per_Total=canni√±os+canadultos;
        topeadul = canadultos * PRECIOS_ADULTONI√ëO[0];
        topeni√± = canni√±os * PRECIOS_ADULTONI√ëO[1];
        supotal = topeadul + topeni√±;
        System.out.println("Muy bien, estas comprando " + canadultos + " entradas de adulto y " + canni√±os + " entradas de ni√±o");
        System.out.println("El total a pagar es de S/" + supotal);
        System.out.println("¬øPAGAR√Å CON TARJETAüí≥(1) O CON EFECTIVOüíµ(2)?");
        int resp_pago = sc.nextInt();
        sc.nextLine();
        if (resp_pago == 1) {
            System.out.println("¬øLa compra la va realizar presencialmente? (SI/NO)");
            String res_tarj = sc.nextLine();

            if (res_tarj.equalsIgnoreCase("SI")) {
                System.out.println("Proceda a deslizar su tarjeta por el dispositivo POS por favor");
                System.out.println("Por favor, digite su clave PIN (4 d√≠gitos)");
                int clave_pin = sc.nextInt();
                sc.nextLine();
                System.out.println("¬øQuiere confirmar la compra? (SI/NO)");
                conf_compra = sc.nextLine();

                if (conf_compra.equalsIgnoreCase("SI")) {
                    System.out.println("----***//   Compra realizada con √©xito   //**-----");
                } else if (conf_compra.equalsIgnoreCase("NO")) {
                    System.out.println("Espero que disfrute la pel√≠culaüòä");
                } else {
                    System.out.println("Opci√≥n no v√°lida");
                }
            } else if (res_tarj.equalsIgnoreCase("NO")) {
                System.out.println("---*** Completa estos datos de la tarjeta por favor ***----");
                System.out.println("Nombre completo: ");
                String nom_Completo = sc.nextLine();
                System.out.println("N√∫mero de tarjeta: ");
                String num_Tarjeta = sc.nextLine();
                System.out.println("Fecha de vencimiento (MM/YY): ");
                String fechaVen = sc.nextLine();
                System.out.println("C√≥digo de seguridad (CVV): ");
                int cvv = sc.nextInt();
                System.out.println("----***//   Compra realizada con √©xito   //**-----");

            } else {
                System.out.println("Opci√≥n no v√°lida");
            }
        } else if (resp_pago == 2) {
            do {
                System.out.println("Ingrese el monto a pagar por favor:");
                pago_peli = sc.nextDouble();
                vuelto_peli = pago_peli - supotal;
                if (vuelto_peli >= 0) {
                    System.out.println("Tu vuelto es s/" + vuelto_peli);
                    System.out.println("Gracias por su compra vuelva pronto");
                } else if (vuelto_peli < 0) {
                    System.out.println("El dinero es insuficiente, si quiere comprar tendr√° que incrementar m√°s");
                }
            } while (vuelto_peli < 0);
        } else {
            System.out.println("Opci√≥n no v√°lida ‚òπÔ∏è");
        }
    }

    public String BOLETA_FINAL() {
        double total_cine = supotal + Dulcer√≠a_CINEPLANET.subtotalTodo[0], igv = total_cine * 0.18;
        LocalDate fechaActual = LocalDate.now();
        System.out.println("--------  //  - //  BOLETA CINEPLANET  // - // *****  -------");
        System.out.println("                      Cineplex S.A.");
        System.out.println(" CAJA : 3 " + " CAJERO: CRISTHIAN GOMEZ");
        System.out.println(" NRO.REFERENCIA: 135429");
        System.out.println("FECHA:   " + fecha_actual + " HORA:  " + hora_actual);
        System.out.println("CIUDAD: " + info_ciudad + "       N¬∞ BOLETOS:  " + cant_per_Total);
        System.out.println("PEL√çCULA ELEGIDA: " + info_pelicula);
        System.out.println("______ SUBTOTAL PELICULAS : s/" + supotal + "____");
        System.out.println("______ SUBTOTAL DULCER√çA : s/" + Dulcer√≠a_CINEPLANET.subtotalTodo[0] + "____");
        System.out.println("TOTAL: s/" + (total_cine - igv));
        System.out.println("IGV (18%): s/" + igv);
        System.out.println("TOTAL FINAL: s/" + total_cine);
        System.out.println("MONTO DADO (efectivo): s/" + pago_peli);
        System.out.println("VUELTO (efectivo): s/" + vuelto_peli);
        System.out.println("-------*** GRACIAS POR SU COMPRA ***-------");
        try {
            File file = new File("E:\\BOLETA_FINAL.txt");
            FileWriter escrib = new FileWriter(file, true);
            escrib.write("--------  //  - //  BOLETA CINEPLANET  // - // *****  -------\n");
            escrib.write("                      Cineplex S.A.\n");
            escrib.write(" CAJA : 3 " + "   CAJERO: CRISTHIAN GOMEZ\n");
            escrib.write(" NRO.REFERENCIA: 135429\n");
            escrib.write("FECHA:   " + fecha_actual + " HORA:  " + hora_actual+ "\n");
            escrib.write("CIUDAD: " + info_ciudad + "       N¬∞ BOLETOS:  " + cant_per_Total + "\n");
            escrib.write("PEL√çCULA ELEGIDA: " + info_pelicula + "\n");
            escrib.write("______ SUBTOTAL PELICULAS : s/" + supotal + "____\n");
            for (int i = 0; i < Dulcer√≠a_CINEPLANET.snack_descrip.length; i++) {
                if (Dulcer√≠a_CINEPLANET.carrito[i] > 0) {
                    Dulcer√≠a_CINEPLANET.boleta.append(Dulcer√≠a_CINEPLANET.snack_descrip[i]).append(" x").append(Dulcer√≠a_CINEPLANET.carrito[i]).append(" - S/ ").append(Dulcer√≠a_CINEPLANET.precio_Snack[i]).append("      S/ ").append(Dulcer√≠a_CINEPLANET.precio_Snack[i] * Dulcer√≠a_CINEPLANET.carrito[i]).append("\n");
                }
            }
            escrib.write("______ SUBTOTAL DULCER√çA : s/" + Dulcer√≠a_CINEPLANET.subtotalTodo[0] + "____\n");
            escrib.write("TOTAL: s/" + (total_cine - igv) + "\n");
            escrib.write("IGV (18%): s/" + igv + "\n");
            escrib.write("TOTAL FINAL: s/" + total_cine + "\n");
            escrib.write("MONTO DADO (efectivo): s/" + pago_peli+ "\n");
            escrib.write("VUELTO (efectivo): s/" + vuelto_peli + "\n");
            escrib.write("-------*** GRACIAS POR SU COMPRA ***-------\n");
            escrib.close();
            System.out.println("Boleta_FINAL_CINEPLANET guardada con √©xito en boleta_FINAL.txt");
        } catch (IOException e) {
            System.out.println("----***   Error   *---");
            e.printStackTrace();
        }
        return null;
    }
