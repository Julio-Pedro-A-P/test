    public void COMPRABOLETOS() {
        System.out.println(AZUL + "ANTES DE REALIZAR LA COMPRA, SELECCIONE LA CIUDAD EN LA QUE SE ENCUENTRA:" + FINCOLOR);
        for (int i = 0; i < CIUDADES.length; i++) {
            System.out.println(ROJO + (i + 1) + ".- " + VERDE + CIUDADES[i] + FINCOLOR);
        }
        opcion = sc.nextInt();
        sc.nextLine();
        if (opcion < 1 || opcion > CIUDADES.length) {
            System.out.println(ROJO + "¬°¬°OPCION INVALIDA INTENTE DE NUEVO!!" + FINCOLOR);
            this.COMPRABOLETOS();
        }
        info_ciudad=CIUDADES[opcion - 1];
        System.out.println(AZUL + "DE ACUERDO A LA CIUDAD " + FINCOLOR + "( " + ROJO + CIUDADES[opcion - 1] + FINCOLOR + ")");
        System.out.println(AZUL + "Los precios son de:\n" + ROJO + "Precio adulto=20\n" + "Precio ni√±o=15" + FINCOLOR);

        System.out.println(AZUL + "Las peliculas disponibles son:");
        for (int i = 0; i < PELICULAS.length; i++) {
            System.out.println(ROJO + (i + 1) + ".-" + FINCOLOR + PELICULAS[i]);
        }
        System.out.println(AZUL + "Seleccione la pelicula que desea ver " + FINCOLOR);
        selecpelicula = sc.nextInt();
        sc.nextLine();

        if (selecpelicula < 1 || selecpelicula > PELICULAS.length) {
            System.out.println(ROJO + "¬°¬°OPCION INVALIDA INTENTE DE NUEVO!!" + FINCOLOR);
            this.COMPRABOLETOS();
